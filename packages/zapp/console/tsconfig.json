{
    "extends": "../../../tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./dist",
        "paths": {
            "@flyteconsole/*": ["../../../composites/*/src", "../../../plugins/*/src"]
