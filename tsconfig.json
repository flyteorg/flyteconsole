{
    "files": [],
    "include": [],
    "compilerOptions": {
        // compilerOptions here used for jest setup only -
        // all packages are using tsconfig.base.json as a baseline
        "jsx": "react",
        "lib": ["dom", "esnext"],
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "baseUrl": "./",
        "paths": {
            "@flyteconsole/*": [
                "./packages/components/*/src",
                "./packages/plugins/*/src",
                "./packages/zapp/*/src"
            ]
        }
    },
    "references": [
        { "path": "./packages/plugins/components" },
        { "path": "./packages/zapp/console" }
    ]
}
