{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "composite": true
    },
    "references": [
        {
            "path": "../console/tsconfig.build.json"
        },
        {
            "path": "../common/tsconfig.build.json"
        }
    ],
    "exclude": [
        // files excluded from the build, we can not put it inro default tsconfig
        // as it will screw VSCode IntelliSence
        "**/test",
        "**/mocks",
        "**/__mocks__",
        "**/__stories__",
        "**/*.spec.*",
        "**/*.test.*",
        "**/*.mock.*",
        "**/*.stories.*"
    ]
}
